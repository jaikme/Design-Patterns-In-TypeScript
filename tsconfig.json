{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "rootDir": ".",
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "declaration": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "@": ["./source"],
    }
  },
  "exclude": ["node_modules", ".next", "out", "babel.config.js", "jest.config.js"],
  "include": ["**/*.ts"]
}
